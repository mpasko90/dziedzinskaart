---
import { Icon as AstroIcon } from 'astro-icon/components';

interface Props {
    name: string;
    size?: number;
    class?: string;
}

const { name, size = 24, class: className } = Astro.props;
---

<AstroIcon
        name={name}
        size={size}
        class:list={['inline-block', className]}
/>