---
import { Icon } from 'astro-icon/components';

const socialLinks = [
    { href: "https://facebook.com", label: "Facebook", icon: "mdi:facebook" },
    { href: "https://instagram.com", label: "Instagram", icon: "mdi:instagram" }
];
---

<div class="flex flex-col items-center p-4 space-y-4">
    {socialLinks.map(({ href, label, icon }) => (
            <a
                    href={href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center w-full px-2 py-2 rounded-lg text-white hover:bg-secondary transition-all duration-300 text-nowrap"
                    aria-label={label}
            >
                <Icon name={icon} class="w-6 h-6 flex-shrink-0" />
                <!-- Show text only when sidebar is expanded -->
                <span class="ml-4 text-sm hidden group-hover:block">{label}</span>
            </a>
    ))}
</div>

