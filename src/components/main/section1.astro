---
import Image from 'astro/components/Image.astro';
import myImage from '../../assets/agata-dziedzinska.jpg';
import logoImage from '../../assets/logo.png';
---

<div class="flex flex-col md:flex-row bg-custom h-full w-full items-center justify-center py-8 gap-4 p-2">

    <div class="flex backdrop-blur-sm text-center container px-4 md:max-w-screen-md gap-4 md:justify-center md:items-center h-fit font-header flex-col">
        <Image
                src={logoImage}
                alt="Dziedzińska Art"
                class="border-4 border-logo-color rounded-2xl w-1/2 md:w-1/3 min-w-[200px] mx-auto mb-4 motion-scale-in-[0.5] motion-rotate-in-[10deg] motion-blur-in-[10px] motion-delay-[0.75s]/rotate motion-delay-[0.75s]/blur"
        />

        <div class="divide-y divide-solid">
            <h1 class="text-3xl md:text-6xl motion-scale-in-[0.06] motion-translate-x-in-[-1%] motion-translate-y-in-[-1%]">
                <span class="text-secondary">Agata </span>
                <span class="text-gold">Dziedzińska</span>
                <br />
                <span class="text-xl md:text-3xl">pasjonatka tworzenia</span>
            </h1>

            <div class="w-full">
                <p class="mt-2 font-text text-base md:text-2xl text-center motion-scale-in-[0.06] motion-translate-x-in-[-1%] motion-translate-y-in-[-1%]">
                    Swój świat artystyczny skupiam na malarstwie oraz modzie upcyklingowej
                </p>
            </div>
        </div>
    </div>

    <Image
            src={myImage}
            alt="Dziedzińska Art"
            loading={'eager'}
            class="border-4 border-logo-color rounded-2xl w-full max-w-xs md:max-w-xl mx-auto md:mx-0 mt-8 md:mt-0 motion-scale-in-[0.5] motion-rotate-in-[-10deg] motion-blur-in-[10px] motion-delay-[0.75s]/rotate motion-delay-[0.75s]/blur"
    />
</div>

<style>
    .bg-custom {
        background-color: black;
    }

    .border-logo-color {
        border-color: hsl(46, 60%, 38%);
    }

    .text-gold {
        color: hsl(46, 60%, 38%);
    }
</style>
