---
import { Icon } from 'astro-icon/components';
import Image from 'astro/components/Image.astro';
import contactImage from '../assets/agata-dziedzinska-kontakt.jpg';
---

<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <h1 class="text-center font-header text-5xl text-gray-900 mb-8">Sprawdź moje social media</h1>
        <div class="flex flex-col md:flex-row items-center justify-center gap-8 max-w-4xl mx-auto">
            <div class="social-links flex flex-col gap-6">
                <a href="https://www.facebook.com" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text hover:text-dark transition-colors">
                    <Icon name="mdi:facebook" class="w-8 h-8" />
                    <span class="text-lg">Znajdź mnie na Facebooku</span>
                </a>
                <a href="https://www.instagram.com" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text hover:text-dark transition-colors">
                    <Icon name="mdi:instagram" class="w-8 h-8" />
                    <span class="text-lg">Sprawdź mój Instagram</span>
                </a>
                <a href="tel:+48695544077" class="flex items-center gap-3 text-text hover:text-dark transition-colors">
                    <Icon name="mdi:phone" class="w-8 h-8" />
                    <span class="text-lg">Zadzwoń</span>
                </a>
                <a href="mailto:kontakt@dziedzinskaart.com" class="flex items-center gap-3 text-text hover:text-dark transition-colors">
                    <Icon name="mdi:email" class="w-8 h-8" />
                    <span class="text-lg">Zostaw wiadomość</span>
                </a>
            </div>
            <div class="w-full md:w-1/2">
                <Image src={contactImage} alt="Agata Dziedzińska" class="w-full h-auto rounded-lg shadow-lg" />
            </div>
        </div>
    </div>
</section>
