---
import MainNav from '../components/navigation/MainNav.astro';
import SocialNav from '../components/navigation/SocialNav.astro';
import { ClientRouter } from 'astro:transitions';
import  SpeedInsights  from "@vercel/speed-insights/astro";

const title = "Dziedzinska Art";
const description = "Oficjalna strona artystki Dziedzińskiej prezentująca portfolio prac artystycznych i modowych.";
---

<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Syne:wght@400..800&display=swap" rel="stylesheet">
    <meta name="description" content={description} />
    <title>{title}</title>
    <ClientRouter fallback="animate" />
</head>
<body class="h-screen max-w-full flex overflow-hidden">
<!-- Sidebar -->
<aside
        class="bg-primary text-white flex flex-col justify-between h-full w-[5rem] hover:w-[16rem] transition-all duration-300 ease-in-out group"
>
    <!-- Navigation -->
    <div>
        <MainNav />
    </div>

    <!-- Social Links -->
    <div>
        <SocialNav />
    </div>
</aside>

<!-- Main Content -->
<main class="flex-1 overflow-y-auto">
    <slot />
</main>
<SpeedInsights />
</body>
</html>
